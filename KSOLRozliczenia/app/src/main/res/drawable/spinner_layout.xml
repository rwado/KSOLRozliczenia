<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <padding
                        android:left="1dp"
                        android:top="1dp"
                        android:right="-3dp"
                        android:bottom="1dp"
                        />

                    <gradient android:startColor="#f4f4f4" android:endColor="#ffffff" android:angle="270" />
                    <stroke android:width="0.5px" android:color="#000000" />
                    <corners android:radius="1dp" />
                </shape>
            </item>

            <item>

                <bitmap android:gravity="center|right" android:src="@drawable/spinner_arrow"/>

            </item>

        </layer-list>
    </item>
</selector>