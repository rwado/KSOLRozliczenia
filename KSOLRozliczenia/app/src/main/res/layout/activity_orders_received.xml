<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewSort"
            style="@style/TextViewHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="Sortuj po użytkowniku" />

        <Spinner
            android:id="@+id/spinnerSortByUserOrdersReceived"
            style="@style/SpinnerStyle"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/textView11"
            style="@style/TextViewHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="Otrzymane" />


        <LinearLayout
            android:id="@+id/linearLayoutHeader1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="4dp"
            android:paddingRight="4dp">

            <TextView
                style="@style/TextRecyclerHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:gravity="center"
                android:text="Nazwa" />

            <TextView
                android:id="@+id/textQuantityOrdersGiven1"
                style="@style/TextRecyclerHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.15"
                android:gravity="center"
                android:text="Szt." />

            <TextView
                android:id="@+id/textPriceSumOrdersGiven1"
                style="@style/TextRecyclerHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.15"
                android:gravity="center"
                android:text="PLN" />

            <TextView
                android:id="@+id/textRecipientOrdersGiven1"
                style="@style/TextRecyclerHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.02"
                android:gravity="center"
                android:text="Otrzymany od" />

            <TextView
                android:id="@+id/textDateOrdersGiven1"
                style="@style/TextRecyclerHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.03"
                android:gravity="center"
                android:text="Data" />

        </LinearLayout>

        <ListView
            android:id="@+id/listViewOrdersReceived"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_weight="0.8">

        </ListView>

        <TextView
            android:id="@+id/textView110"
            style="@style/TextViewHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Oczekujące"
            android:padding="3dp"/>

        <LinearLayout
            android:id="@+id/linearLayoutHeader11"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="4dp"
            android:paddingRight="4dp">

            <TextView
                style="@style/TextRecyclerHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:gravity="center"
                android:text="Nazwa" />

            <TextView
                android:id="@+id/textQuantityOrdersGiven"
                style="@style/TextRecyclerHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.15"
                android:gravity="center"
                android:text="Szt." />

            <TextView
                android:id="@+id/textPriceSumOrdersGiven"
                style="@style/TextRecyclerHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.15"
                android:gravity="center"
                android:text="PLN" />

            <TextView
                android:id="@+id/textRecipientOrdersGiven"
                style="@style/TextRecyclerHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.02"
                android:gravity="center"
                android:text="Otrzymany od" />

            <TextView
                android:id="@+id/textDateOrdersGiven"
                style="@style/TextRecyclerHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.03"
                android:gravity="center"
                android:text="Data" />

        </LinearLayout>

        <ListView
            android:id="@+id/listViewOrdersReceivedWaiting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_weight="1" />
    </LinearLayout>

</ScrollView>